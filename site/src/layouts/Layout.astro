---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  keywords?: string;
  structuredData?: object;
}

const {
  title,
  description = 'Modern Chinese Dictionary - Learn Chinese slang and internet terms',
  lang = 'en',
  canonical,
  ogImage = '/og-default.svg',
  ogType = 'website',
  keywords,
  structuredData,
} = Astro.props;

const currentUrl = canonical ? `https://chinesedict.com${canonical}` : Astro.url.href;
const ogImageUrl = ogImage.startsWith('http') ? ogImage : `https://chinesedict.com${ogImage}`;
