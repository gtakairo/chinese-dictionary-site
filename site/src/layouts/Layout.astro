          </a>

          <!-- Search Bar -->
          <div class="flex-1 max-w-lg mx-8 hidden md:block">
            <form action={`/${lang}/search`} method="get" class="relative">
              <input
                type="search"
                name="q"
                placeholder="Search Chinese words..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
              />
              <svg
                class="absolute left-3 top-2.5 h-5 w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
